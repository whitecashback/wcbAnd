<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/top"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/backFromProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_backward_arrow"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/launchericon_dialog"/>

    <TextView
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="My Profile"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:background="#2e2020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backFromProfile"
        android:id="@+id/message"
        android:padding="8dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Something went wrong...!!!"/>

</RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:clipToPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:inputType="textPersonName|textCapSentences"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="Full Name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="textPersonName|textCapSentences"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="Email"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Line 1 *"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="textPersonName|textCapSentences"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="Address Line 1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Line 2"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="textPersonName|textCapSentences"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="Address Line 2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="textPersonName|textCapSentences"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="City"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State *"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="textPersonName|textCapSentences"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColorHint="#b2b2b2"
                        android:hint="State"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zip"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:drawablePadding="10dp"
                        android:textColorHint="#b2b2b2"

                        android:padding="15dp"
                        android:hint="Zip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:textSize="15sp"
                        android:inputType="phone"
                        android:drawablePadding="10dp"
                        android:textColorHint="#b2b2b2"

                        android:padding="15dp"
                        android:hint="Phone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:layout_marginBottom="15dp"
                android:textColor="#fff"/>

        </LinearLayout>
    </ScrollView>
    <com.cashback.indicator.AVLoadingIndicatorView
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:indicator="LineScale"
        app:indicator_color="@color/colorPrimary" />
</RelativeLayout>
