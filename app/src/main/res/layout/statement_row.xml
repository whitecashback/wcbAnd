<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/linRow"
    android:background="#fff">


    <LinearLayout
        android:id="@+id/cashbackLayout"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="12sp"
        android:gravity="left"
        android:layout_gravity="center"
        android:textColor="#000"/>

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="left"
        android:textSize="12sp"
        android:id="@+id/retailer"
        android:layout_width="0dp"
        android:maxLength="15"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:layout_gravity="center"
        android:textColor="#000"/>

    <TextView
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="left"
        android:textSize="12sp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:layout_gravity="center"
        android:textColor="#000"/>


    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/paymentType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="12sp"
        android:gravity="left"
        android:layout_gravity="center"
        android:textColor="#000"/>

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/cashback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:text=""
        android:textSize="12sp"
        android:gravity="left"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:text=""
        android:textSize="12sp"
        android:gravity="left"
        android:layout_gravity="center"
        android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/referToLayout"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/date1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="12sp"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="left"
            android:textSize="12sp"
            android:id="@+id/retailer1"
            android:maxLength="15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="left"
            android:textSize="12sp"
            android:id="@+id/referTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:textColor="#000"/>


        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/paymentType1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="12sp"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/cashback1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text=""
            android:textSize="12sp"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/status1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text=""
            android:textSize="12sp"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>